<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_menu_headshot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/default_headshot"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/drawer_menu_textview_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="10000"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/drawer_menu_textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/drawer_menu_textview_userid"
        android:text="Tony Green"
        android:textColor="#FFF"
        android:textSize="14sp" />
</RelativeLayout>